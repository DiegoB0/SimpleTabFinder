{
  "manifest_version": 3,
  "name": "Simple Tab Fuzzy Finder",
  "version": "1.0",
  "description": "Simple fuzzy finder to manage tabs in chrome.",
  "permissions": [
    "tabs",
    "commands",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open_finder": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Open the fuzzy finder"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
