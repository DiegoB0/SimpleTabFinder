{
  "manifest_version": 3,
  "name": "Simple Modal Extension",
  "version": "1.0",
  "description": "Open a modal with a shortcut.",
  "permissions": [
    "commands"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open_modal": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Open the modal"
    }
  },
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
